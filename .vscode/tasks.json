{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "C/C++: gcc.exe build active file",
			"command": "C:\\MinGW\\bin\\gcc.exe",
			"args": [
				"-g",
                "${workspaceFolder}/main.c",
                "${workspaceFolder}/symtable.c",
                "${workspaceFolder}/lexer.c",
                "-o",
                "${workspaceFolder}/output/teste.exe"	
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
			"detail": "compiler: C:\\MinGW\\bin\\gcc.exe"
		}
	]
}